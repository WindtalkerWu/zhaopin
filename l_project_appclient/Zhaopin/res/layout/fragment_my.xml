<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/resume_home_bg"
    android:orientation="vertical" >

    <RelativeLayout style="@style/common_top_layout_style" >

        <ImageView
            android:id="@+id/fragment_my_set"
            style="@style/common_top_left_title_style"
            android:src="@drawable/common_button_add"
            android:visibility="visible" />

        <TextView
            android:id="@+id/active_title"
            style="@style/common_top_center_bigtitle_style"
            android:text="我" />

        <Button
            android:id="@+id/fragment_my_topright_btn"
            style="@style/fillheight_top_right_title_style"
            android:text="登录"
            android:visibility="visible" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layerType="software" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:orientation="vertical" >

            <include
                layout="@layout/resume_simpleinfo_layout"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/account_photo_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp" >

                    <ImageView
                        android:id="@+id/account_complete_imgview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true" />

                    <ImageView
                        android:id="@+id/account_headphoto_imgview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:paddingBottom="15dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="8dp" >
                <!-- 积分管理 -->
				<RelativeLayout
                    android:id="@+id/myintegral_item"
                    android:layout_width="fill_parent"
                    android:layout_height="50.0dip"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/common_list_item_selector" >

                    <TextView
                        android:id="@+id/myintegral_item_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15.0dip"
                        android:text="@string/str_myintegral_title"
                        android:textColor="@color/list_title"
                        android:textSize="16.0sp" />

                    <ImageView
                        android:id="@+id/common_item_arrow4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10.0dip"
                        android:src="@drawable/common_img_next_big" />

                    <TextView
                        android:id="@+id/myintegral_item_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/common_item_arrow4"
                        android:paddingRight="10.0dip"
                        android:text="4"
                        android:textColor="@color/red"
                        android:textSize="14.0sp"
                        android:visibility="invisible" />
                </RelativeLayout>
                
                <RelativeLayout
                    android:id="@+id/myaccount_item"
                    android:layout_width="fill_parent"
                    android:layout_height="50.0dip"
                    android:layout_marginTop="-1dp"
                    android:background="@drawable/common_list_item_selector" >

                    <TextView
                        android:id="@+id/myaccount_item_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15.0dip"
                        android:text="@string/str_myaccount_title"
                        android:textColor="@color/list_title"
                        android:textSize="16.0sp" />

                    <ImageView
                        android:id="@+id/common_item_arrow4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10.0dip"
                        android:src="@drawable/common_img_next_big" />

                    <TextView
                        android:id="@+id/myaccount_item_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/common_item_arrow4"
                        android:paddingRight="10.0dip"
                        android:text="4"
                        android:textColor="@color/red"
                        android:textSize="14.0sp"
                        android:visibility="invisible" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/myresume_item"
                    android:layout_width="fill_parent"
                    android:layout_height="50.0dip"
                    android:layout_marginTop="-1dp"
                    android:background="@drawable/common_list_item_selector" >

                    <TextView
                        android:id="@+id/myresume_item_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15.0dip"
                        android:text="我的简历库"
                        android:textColor="@color/list_title"
                        android:textSize="16.0sp" />

                    <ImageView
                        android:id="@+id/common_item_arrow1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10.0dip"
                        android:src="@drawable/common_img_next_big" />

                    <TextView
                        android:id="@+id/myresume_item_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/common_item_arrow1"
                        android:paddingRight="10.0dip"
                        android:text="2"
                        android:textColor="@color/resume_button_color"
                        android:textSize="14.0sp"
                        android:visibility="invisible" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/myreward_item"
                    android:layout_width="fill_parent"
                    android:layout_height="50.0dip"
                    android:layout_marginTop="-1dp"
                    android:background="@drawable/common_list_item_selector" >

                    <TextView
                        android:id="@+id/myreward_item_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15.0dip"
                        android:text="我的悬赏"
                        android:textColor="@color/list_title"
                        android:textSize="16.0sp" />

                    <ImageView
                        android:id="@+id/common_item_arrow3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10.0dip"
                        android:src="@drawable/common_img_next_big" />

                    <TextView
                        android:id="@+id/myreward_item_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/common_item_arrow3"
                        android:paddingRight="10.0dip"
                        android:text="4"
                        android:textColor="@color/resume_button_color"
                        android:textSize="14.0sp"
                        android:visibility="invisible" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/myrecord_item"
                    android:layout_width="fill_parent"
                    android:layout_height="50.0dip"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/common_list_item_selector" >

                    <TextView
                        android:id="@+id/myrecord_item_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15.0dip"
                        android:text="任务记录"
                        android:textColor="@color/list_title"
                        android:textSize="16.0sp" />

                    <ImageView
                        android:id="@+id/common_item_arrow1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10.0dip"
                        android:src="@drawable/common_img_next_big" />

                    <TextView
                        android:id="@+id/myrecord_item_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/common_item_arrow1"
                        android:paddingRight="10.0dip"
                        android:text="2"
                        android:textColor="@color/resume_button_color"
                        android:textSize="14.0sp"
                        android:visibility="invisible" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/mycollection_item"
                    android:layout_width="fill_parent"
                    android:layout_height="50.0dip"
                    android:layout_marginTop="-1dp"
                    android:background="@drawable/common_list_item_selector" >

                    <TextView
                        android:id="@+id/mycollection_item_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15.0dip"
                        android:text="我的收藏"
                        android:textColor="@color/list_title"
                        android:textSize="16.0sp" />

                    <ImageView
                        android:id="@+id/common_item_arrow2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10.0dip"
                        android:src="@drawable/common_img_next_big" />

                    <TextView
                        android:id="@+id/mycollection_item_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/common_item_arrow2"
                        android:paddingRight="10.0dip"
                        android:text="4"
                        android:textColor="@color/resume_button_color"
                        android:textSize="14.0sp"
                        android:visibility="invisible" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/phoneaccount_item"
                    android:layout_width="fill_parent"
                    android:layout_height="50.0dip"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/common_list_item_selector" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingLeft="15.0dip"
                        android:text="手机绑定"
                        android:textColor="@color/list_title"
                        android:textSize="16.0sp" />

                    <ImageView
                        android:id="@+id/common_item_arrow4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10.0dip"
                        android:src="@drawable/common_img_next_big" />

                    <TextView
                        android:id="@+id/phoneaccount_item_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/common_item_arrow4"
                        android:paddingRight="10.0dip"
                        android:text="4"
                        android:textColor="@color/resume_button_color"
                        android:textSize="14.0sp"
                        android:visibility="invisible" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/mailaccount_item"
                    android:layout_width="fill_parent"
                    android:layout_height="50.0dip"
                    android:layout_marginTop="-1dp"
                    android:background="@drawable/common_list_item_selector" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingLeft="15.0dip"
                        android:text="邮箱绑定"
                        android:textColor="@color/list_title"
                        android:textSize="16.0sp" />

                    <ImageView
                        android:id="@+id/common_item_arrow3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10.0dip"
                        android:src="@drawable/common_img_next_big" />

                    <TextView
                        android:id="@+id/mailaccount_item_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/common_item_arrow3"
                        android:paddingRight="10.0dip"
                        android:text="4"
                        android:textColor="@color/resume_button_color"
                        android:textSize="14.0sp"
                        android:visibility="invisible" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/setting_item"
                    android:layout_width="fill_parent"
                    android:layout_height="50.0dip"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/common_list_item_selector" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingLeft="15.0dip"
                        android:text="设置"
                        android:textColor="@color/list_title"
                        android:textSize="16.0sp" />

                    <ImageView
                        android:id="@+id/common_item_arrow3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10.0dip"
                        android:src="@drawable/common_img_next_big" />

                    <TextView
                        android:id="@+id/myreward_item_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/common_item_arrow3"
                        android:paddingRight="10.0dip"
                        android:text="4"
                        android:textColor="@color/resume_button_color"
                        android:textSize="14.0sp"
                        android:visibility="invisible" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>