<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/login_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    android:background="@color/bg_color">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

           <RelativeLayout style="@style/common_top_layout_style" >

                <ImageButton
					android:id="@+id/tencentweiboauthorize_btn_goback"
					style="@style/common_top_left_title_style" 
					android:src="@drawable/common_button_back"/>

                <TextView
                    android:id="@+id/tencentweiboauthorize_tv_title"
                    style="@style/common_top_center_bigtitle_style"
                    android:text="@string/app_name" />
            </RelativeLayout>

            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scrollbars="none" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >
					<WebView
			            android:id="@+id/tencentweiboauthorize_webview"
			            android:layout_width="fill_parent"
			            android:layout_height="fill_parent"
			            android:scrollbars="none" />

                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>