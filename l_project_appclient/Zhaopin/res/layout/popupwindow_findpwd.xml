<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
	android:background="#00000000"	
    >
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

		<RelativeLayout
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_alignParentBottom="true"
		    android:background="@color/white"
		    android:paddingBottom="20.0sp" >
		
       		 <RelativeLayout
       		    android:id="@+id/popupwindow_findpwd_rl_title"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="10.0dip"
				android:layout_alignParentTop="true"
				android:layout_centerVertical="true"
				android:orientation="horizontal" >
				<TextView
				    android:id="@+id/popupwindow_findpwd_tv_title"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerInParent="true"
               		android:gravity="center"
            	    android:textColor="@color/list_title"
					android:text="@string/str_findpwdpop_title"
					android:textSize="20.0sp" />
			</RelativeLayout>
			<RelativeLayout
		        android:id="@+id/popupwindow_findpwd_rl_method"
		        style="@style/searchbar_input_layout_style"
		        android:layout_below="@id/popupwindow_findpwd_rl_title"
		        android:visibility="visible" >
        		<EditText
		            android:id="@+id/popupwindow_findpwd_et_method"
		            android:textSize="14.0sp"
            		android:textColor="@color/list_subTitle"
		            android:textColorHint="@color/thingrey"
		            android:gravity="bottom"
		            android:background="@drawable/common_search_edittext_bg"
		            android:paddingLeft="15.0dip"
		            android:paddingRight="33.0dip"
		            android:paddingBottom="10.0dip"
		            android:layout_width="fill_parent"
		            android:layout_height="fill_parent"
		            android:hint="@string/str_findpwdpop_hint_method"
		            android:cursorVisible="true"
		            android:singleLine="true"
		            android:maxLength="100"
		            android:imeOptions="actionSearch"
		            />
		        <ImageView
		            android:id="@+id/popupwindow_findpwd_iv_methodclean"
		            style="@style/common_input_cleaner_style"
		            android:layout_width="40.0dip" />
   			 </RelativeLayout>
		    <RelativeLayout
		    	android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:layout_centerInParent="true"
		        android:layout_below="@id/popupwindow_findpwd_rl_method"
		        android:layout_marginTop="10.0dip"
		   		 >
				<RelativeLayout
	               android:id="@+id/popupwindow_findpwd_rl_mail"
	               android:layout_alignParentLeft="true"
	               android:layout_centerVertical="true"
	               style="@style/common_button_green_short"
	              		>
				   <TextView
				   	   android:layout_width="wrap_content"
				   	   android:layout_height="wrap_content"
				   	   android:layout_centerInParent="true"
				   	   android:textSize="16.0sp"
				   	   android:textColor="@color/white"
	              	   android:text="@string/str_findpwdpop_button_mail"
				       />
	           	</RelativeLayout>
				<RelativeLayout
	               android:id="@+id/popupwindow_findpwd_rl_mobile"
			   	   android:layout_toRightOf="@id/popupwindow_findpwd_rl_mail"
	               android:layout_centerVertical="true"
	               android:layout_marginLeft="30.0dip"
	               style="@style/common_button_green_short"
	              		>
				   <TextView
				   	   android:layout_width="wrap_content"
				   	   android:layout_height="wrap_content"
				   	   android:layout_centerInParent="true"
				   	   android:textSize="16.0sp"
				   	   android:textColor="@color/white"
	              	   android:text="@string/str_findpwdpop_button_mobile"
				       />
	           	</RelativeLayout>
                  </RelativeLayout>
		</RelativeLayout>
    </RelativeLayout>
</LinearLayout>