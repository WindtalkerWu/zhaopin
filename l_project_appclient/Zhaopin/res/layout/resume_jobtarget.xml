<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical" >

    <RelativeLayout style="@style/common_top_layout_style" >

        <ImageButton
            android:id="@+id/resume_jobtarget_goback"
            style="@style/common_top_left_title_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/common_button_back" />

        <ImageButton
            android:id="@+id/resume_edit_save"
            style="@style/common_top_right_title_style"
            android:src="@drawable/common_button_save"
            android:visibility="visible" />

        <TextView
            android:id="@+id/resume_jobtarget_title"
            style="@style/common_top_center_bigtitle_style"
            android:text="@string/resume_jobtarget" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="20dp" >

                <LinearLayout
                    android:layout_width="0px"
                    android:layout_height="0px"
                    android:focusable="true"
                    android:focusableInTouchMode="true" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <LinearLayout style="@style/LineStyle_Layout" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/publish_reward_must"
                            android:textColor="@color/red" />

                        <TextView
                            style="@style/LineStyle_Text"
                            android:text="求职状态" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/job_status"
                        style="@style/LineStyle_Button"
                        android:hint="请选择求职状态" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-2dp"
                    android:minHeight="@dimen/default_input_height"
                    android:orientation="horizontal" >

                    <LinearLayout style="@style/LineStyle_Layout" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/publish_reward_must"
                            android:textColor="@color/red" />

                        <TextView
                            style="@style/LineStyle_Text"
                            android:text="期望职位" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/privatetitle"
                        style="@style/LineStyle_Edit"
                        android:hint="请输入期望职位"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/position_btn"
                        style="@style/LineStyle_Button"
                        android:hint="请选择职位名称"
                        android:visibility="visible" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-2dp"
                    android:orientation="horizontal" >

                    <LinearLayout style="@style/LineStyle_Layout" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/publish_reward_must"
                            android:textColor="@color/red" />

                        <TextView
                            style="@style/LineStyle_Text"
                            android:text="期望行业" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/hope_industry"
                        style="@style/LineStyle_Button"
                        android:hint="请选择期望行业" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-2dp"
                    android:orientation="horizontal" >

                    <LinearLayout style="@style/LineStyle_Layout" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/publish_reward_must"
                            android:textColor="@color/red" />

                        <TextView
                            style="@style/LineStyle_Text"
                            android:text="期望地区" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/hope_city"
                        style="@style/LineStyle_Button"
                        android:hint="请选择期望地区" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-2dp"
                    android:orientation="horizontal" >

                    <LinearLayout style="@style/LineStyle_Layout" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/publish_reward_must"
                            android:textColor="@color/red"
                            android:visibility="invisible" />

                        <TextView
                            style="@style/LineStyle_Text"
                            android:text="期望年薪" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/hope_salary"
                        style="@style/LineStyle_Button"
                        android:hint="请选择期望年薪" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-2dp"
                    android:orientation="horizontal" >

                    <LinearLayout style="@style/LineStyle_Layout" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/publish_reward_must"
                            android:textColor="@color/red"
                            android:visibility="invisible" />

                        <TextView
                            style="@style/LineStyle_Text"
                            android:text="到岗时间" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/hope_arrivedin"
                        style="@style/LineStyle_Button"
                        android:hint="请选择到岗时间" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-2dp"
                    android:orientation="horizontal" >

                    <LinearLayout style="@style/LineStyle_Layout" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/publish_reward_must"
                            android:textColor="@color/red"
                            android:visibility="invisible" />

                        <TextView
                            style="@style/LineStyle_Text"
                            android:text="求职标签" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/hope_position_tags"
                        style="@style/LineStyle_Edit"
                        android:hint="例如：c++工程师" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-2dp"
                    android:minHeight="@dimen/default_input_height"
                    android:orientation="horizontal" >

                    <LinearLayout style="@style/LineStyle_big_Layout" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/publish_reward_must"
                            android:textColor="@color/red"
                            android:visibility="invisible" />

                        <TextView
                            style="@style/LineStyle_Text"
                            android:text="个人简介" />
                    </LinearLayout>

                    <com.qianniu.zhaopin.app.widget.VerticalScrollInterceptLineralayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <EditText
                            android:id="@+id/hope_introduction"
                            style="@style/LineStyle_big_Edit"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:gravity="top|left"
                            android:hint="最多可输入500字" />
                    </com.qianniu.zhaopin.app.widget.VerticalScrollInterceptLineralayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp" >

                    <Button
                        android:id="@+id/resume_jobtarget_submit"
                        style="@style/LineStyle_center"
                        android:layout_marginTop="10.0dip"
                        android:background="@drawable/common_button_green"
                        android:minHeight="@dimen/default_input_height"
                        android:text="@string/frame_title_save" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>