<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
 	android:descendantFocusability="blocksDescendants">
  	<LinearLayout 
        android:id="@+id/list_item_subindustry_ll_subindustry"
        android:background="@drawable/common_bg_gary_deep"
        style="@style/MMListItem">
        <RelativeLayout  
            android:id="@+id/list_item_subindustry_rl_subindustry"
            android:layout_width="fill_parent" 
            android:layout_height="fill_parent"
            android:orientation="horizontal">
            <ImageView android:id="@+id/list_item_subindustry_img_check"
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content"
                android:src="@drawable/common_img_check_green"
                android:layout_alignParentRight="true"
                android:layout_marginRight="23.0dip"
                android:layout_centerVertical="true"
                android:focusable="false" />
            <TextView 
                android:id="@+id/list_item_subindustry_name"
                android:layout_width="match_parent" 
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:layout_alignParentLeft="true"
                android:singleLine="true"
        		android:paddingLeft="10.0dip"
                android:textColor="@color/list_subTitle"
                android:textSize="15sp"
                android:layout_toLeftOf="@id/list_item_subindustry_img_check"  />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>