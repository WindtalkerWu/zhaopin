<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_item_rewadinfo_rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10.0dip"
    android:paddingLeft="8dp"
    android:paddingRight="8dp" >

   <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/common_form_bg">
		<RelativeLayout
	       android:id="@+id/list_item_transactionrecord_rl_top"
	       android:layout_width="fill_parent"
	       android:layout_height="28.0dip"
	       android:layout_marginLeft="3.0dip"
		   android:layout_marginRight="3.0dip"
	       android:layout_alignParentTop="true" >
	        <!-- 交易类型  -->
	        <TextView 
	            android:id="@+id/list_item_transactionrecord_tv_type"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentLeft="true"
	            android:layout_centerVertical="true"
			    android:singleLine="true"
			    android:textSize="16.0sp"
	            />
	        <!-- 交易金额  -->
	        <TextView 
	            android:id="@+id/list_item_transactionrecord_tv_sum"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_toRightOf="@id/list_item_transactionrecord_tv_type"
	            android:layout_centerVertical="true"
	            android:layout_marginLeft="3.0dip"
			    android:singleLine="true"
			    android:textSize="16.0sp"
			    android:textColor="@color/red"
	            />
	        <!-- 交易日期  -->
	        <TextView 
	            android:id="@+id/list_item_transactionrecord_tv_date"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
	            android:layout_alignParentRight="true"
			    android:singleLine="true"
			    android:textSize="12.0sp"
			    android:gravity="center_vertical|right"
			    android:textColor="@color/list_subTitle"
	            />
		</RelativeLayout>
		<ImageView
			android:id="@+id/list_item_transactionrecord_img_line"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_below="@id/list_item_transactionrecord_rl_top"
			android:background="@drawable/common_form_line" />
		<RelativeLayout
			android:id="@+id/list_item_transactionrecord_rl_dtetail"
			android:layout_width="fill_parent"
			android:layout_height="40.0dip"
			android:layout_marginLeft="3.0dip"
			android:layout_marginRight="3.0dip"
			android:layout_below="@id/list_item_transactionrecord_img_line" >
			<TextView 
				android:id="@+id/list_item_transactionrecord_tv_dtetail"
				android:layout_width="fill_parent"
				android:layout_height="40.0dip"
				android:layout_alignParentTop="true"
				android:layout_alignParentLeft="true"
				android:layout_centerVertical="true"
				android:textSize="16.0sp"
				android:gravity="center_vertical|left"
				android:singleLine="true"
			    android:textColor="@color/list_title"
				/>
	    </RelativeLayout>
    </RelativeLayout>
</RelativeLayout >