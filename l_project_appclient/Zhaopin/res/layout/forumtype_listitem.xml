<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="8dp"
    android:paddingRight="8dp" >

    <RelativeLayout
        style="@style/common_listitem_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/common_list_item_selector" >
        <!-- android:background="@drawable/common_form_bg" -->

        <ImageView
            android:id="@+id/infotype_listitem_userface"
            style="@style/user_face_image"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
             />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/infotype_listitem_userface" >

            <TextView
                android:id="@+id/infotype_listitem_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="5dip"
                android:textColor="@color/list_subTitle"
                android:textSize="@dimen/text_size_10" />

            <TextView
                android:id="@+id/infotype_listitem_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/infotype_listitem_date"
                android:layout_marginTop="3dp"
                android:text="8"
                android:textColor="@color/listitem_gray"
                android:textSize="@dimen/text_size_10"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/infotype_listitem_flag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/infotype_listitem_date"
                android:layout_marginTop="9dp"
                android:layout_marginRight="5dip"
                android:src="@drawable/new_item"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/infotype_listitem_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_toLeftOf="@id/infotype_listitem_date"
                android:ellipsize="end"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:text="title"
                android:textColor="@color/list_title"
                android:textSize="@dimen/text_size_15" />

            <TextView
                android:id="@+id/infotype_listitem_digest"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/infotype_listitem_title"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="6dp"
                android:layout_toLeftOf="@id/infotype_listitem_date"
                android:ellipsize="end"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:text="subtitle"
                android:textColor="@color/list_subTitle"
                android:textSize="@dimen/text_size_12" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>