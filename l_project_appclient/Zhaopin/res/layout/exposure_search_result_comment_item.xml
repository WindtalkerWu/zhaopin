<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/common_form_bg"
    android:padding="10dp" >
    <TextView android:id="@+id/exposure_search_result_comment_item_content"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:textSize="16sp"
    	android:textColor="@color/list_subTitle"
    	android:layout_alignParentLeft="true"
    	android:layout_alignParentTop="true"
    	android:text="XXXX公司"/>
    <TextView android:id="@+id/exposure_search_result_comment_item_username"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:textSize="12sp"
    	android:textColor="@color/resume_button_color"
    	android:layout_below="@id/exposure_search_result_comment_item_content"
    	android:text="1000个职位"
    	android:layout_marginTop="6dp"/>
     <TextView android:id="@+id/exposure_search_result_comment_item_time"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:textSize="12sp"
    	android:textColor="@color/red"
    	android:layout_alignParentRight="true"
    	android:layout_alignTop="@id/exposure_search_result_comment_item_username"
    	android:text="2014.07.08"/>

</RelativeLayout>
