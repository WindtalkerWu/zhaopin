<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_toLeftOf="@+id/my_reward_bg1" >

       <!--  <TextView
            android:id="@+id/my_reward_bonus_flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text=""
            android:textColor="@color/red"
            android:textSize="16sp" /> -->
        <TextView
            android:id="@+id/my_reward_bonus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textColor="@color/red"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/my_reward_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/my_reward_bonus"
            android:singleLine="true"
            android:textColor="@color/list_title"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/my_reward_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/my_reward_bonus"
            android:layout_below="@id/my_reward_bonus"
            android:singleLine="true"
            android:layout_marginTop="4dp"
            android:textColor="@color/list_subTitle"
            android:textSize="14sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@id/my_reward_bg1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/my_reward_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:textColor="@color/list_subTitle"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/my_reward_enddate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:singleLine="true"
            android:layout_marginTop="10dp"
            android:textColor="@color/list_subTitle"
            android:textSize="12sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/my_reward_bg1"
        android:layout_marginTop="10dp"
        android:background="@drawable/line" />

</RelativeLayout>