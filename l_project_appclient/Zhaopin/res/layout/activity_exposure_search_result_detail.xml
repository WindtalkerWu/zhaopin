<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/search_result_detail_top_bg"
        style="@style/common_top_layout_style" >

        <ImageButton
            android:id="@+id/search_result_detail_goback"
            style="@style/common_top_left_title_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/common_button_back" />

        <TextView
            android:id="@+id/search_result_detail_title"
            style="@style/common_top_center_bigtitle_style"
            android:text="搜索结果详情" />
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/search_result_detail_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/search_result_detail_top_bg" >
    </FrameLayout>

</RelativeLayout>