<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/integration_use_item_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="0dp" >

    <ImageView
        android:id="@+id/integration_use_item_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="0.5dp"
        android:scaleType="fitXY"
        android:background="@drawable/qianniu_logobg1" />

    <TextView
        android:id="@+id/integration_use_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="5dp"
        android:singleLine="true"
        android:textColor="@color/list_title"
        android:textSize="16sp"
        android:layout_below="@id/integration_use_item_image"
        android:text="普通简历" />
    <TextView
        android:id="@+id/integration_use_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="5dp"
        android:singleLine="true"
        android:textColor="@color/list_title"
        android:textSize="16sp"
        android:layout_below="@id/integration_use_item_title"
        android:text="兑换价:40" />


</RelativeLayout>