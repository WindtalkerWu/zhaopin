<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/invitefriends_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="invisible" />
    <ImageView android:id="@+id/invitefriends_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/invitefriends_tv1"
        android:src="@drawable/invitefriends_image"/>
    <TextView
        android:id="@+id/invitefriends_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/list_title"
        android:layout_marginTop="20dp"
        android:textSize="16sp"
        android:text="@string/exposure_invitefriends_txt"
        android:layout_below="@+id/invitefriends_tv1"
        android:layout_centerInParent="true" />

</RelativeLayout>