<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/resume_home_bg"
    android:orientation="vertical" >

    <RelativeLayout style="@style/common_top_layout_style" >

        <ImageButton
            android:id="@+id/resume_workexp_item_goback"
            style="@style/common_top_left_title_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/common_button_back" />

        <ImageButton
            android:id="@+id/resume_edit_save"
            style="@style/common_top_right_title_style"
            android:src="@drawable/common_button_save"
            android:visibility="visible" />

        <TextView
            android:id="@+id/resume_workexp_item_title"
            style="@style/common_top_center_bigtitle_style"
            android:text="@string/resume_addworkexperience" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="20dp" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0px"
                    android:layout_height="0px"
                    android:focusable="true"
                    android:focusableInTouchMode="true" />

                <LinearLayout style="@style/LineStyle_Layout" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/publish_reward_must"
                        android:textColor="@color/red" />

                    <TextView
                        style="@style/LineStyle_Text"
                        android:text="公司名称" />
                </LinearLayout>

                <EditText
                    android:id="@+id/compname"
                    style="@style/LineStyle_Edit"
                    android:hint="请输入公司名称" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-2dp"
                android:orientation="horizontal" >

                <LinearLayout style="@style/LineStyle_Layout" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/publish_reward_must"
                        android:textColor="@color/red"
                        android:visibility="invisible" />

                    <TextView
                        style="@style/LineStyle_Text"
                        android:text="开始时间" />
                </LinearLayout>

                <com.qianniu.zhaopin.app.view.DateTextView
                    android:id="@+id/start_time"
                    style="@style/LineStyle_Button"
                    android:hint="请选择开始时间" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-2dp"
                android:orientation="horizontal" >

                <LinearLayout style="@style/LineStyle_Layout" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/publish_reward_must"
                        android:textColor="@color/red"
                        android:visibility="invisible" />

                    <TextView
                        style="@style/LineStyle_Text"
                        android:text="结束时间" />
                </LinearLayout>

                <com.qianniu.zhaopin.app.view.EndDateTextView
                    android:id="@+id/end_time"
                    style="@style/LineStyle_Button"
                    android:hint="请选择结束时间" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-2dp"
                android:orientation="horizontal" >

                <LinearLayout style="@style/LineStyle_Layout" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/publish_reward_must"
                        android:textColor="@color/red"
                        android:visibility="invisible" />

                    <TextView
                        style="@style/LineStyle_Text"
                        android:text="部门名称" />
                </LinearLayout>

                <EditText
                    android:id="@+id/department"
                    style="@style/LineStyle_Edit"
                    android:hint="请输入部门名称" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-2dp"
                android:orientation="horizontal"
                android:visibility="gone" >

                <LinearLayout style="@style/LineStyle_Layout" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/publish_reward_must"
                        android:textColor="@color/red"
                        android:visibility="invisible" />

                    <TextView
                        style="@style/LineStyle_Text"
                        android:text="职位名称" />
                </LinearLayout>

                <EditText
                    android:id="@+id/position"
                    style="@style/LineStyle_Edit"
                    android:hint="请输入职位名称"
                    android:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-2dp"
                android:orientation="horizontal" >

                <LinearLayout style="@style/LineStyle_Layout" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/publish_reward_must"
                        android:textColor="@color/red"
                        android:visibility="invisible" />

                    <TextView
                        style="@style/LineStyle_Text"
                        android:text="职位名称" />
                </LinearLayout>

                <Button
                    android:id="@+id/position_btn"
                    style="@style/LineStyle_Button"
                    android:hint="请选择职位名称"
                    android:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-2dp"
                android:orientation="horizontal" >

                <LinearLayout style="@style/LineStyle_Layout" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/publish_reward_must"
                        android:textColor="@color/red"
                        android:visibility="invisible" />

                    <TextView
                        style="@style/LineStyle_Text"
                        android:text="所属行业" />
                </LinearLayout>

                <Button
                    android:id="@+id/industry"
                    style="@style/LineStyle_Button"
                    android:hint="请选择所属行业" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-2dp"
                android:orientation="horizontal" >

                <LinearLayout style="@style/LineStyle_big_Layout" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/publish_reward_must"
                        android:textColor="@color/red"
                        android:visibility="invisible" />

                    <TextView
                        style="@style/LineStyle_Text"
                        android:text="工作描述" />
                </LinearLayout>

                <EditText
                    android:id="@+id/jd"
                    style="@style/LineStyle_big_Edit"
                    android:gravity="top|left"
                    android:hint="最多可输入500字" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/resume_workexp_item_delete"
                    style="@style/LineStyle_center"
                    android:layout_marginTop="10.0dip"
                    android:background="@drawable/common_button_gray"
                    android:minHeight="@dimen/default_button_height"
                    android:text="@string/frame_workexperience_delete" />

                <Button
                    android:id="@+id/resume_workexp_item_submit"
                    style="@style/LineStyle_center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10.0dip"
                    android:background="@drawable/common_button_green"
                    android:minHeight="@dimen/default_button_height"
                    android:text="@string/frame_title_save" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>