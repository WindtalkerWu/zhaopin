<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/space_14"
    android:paddingRight="@dimen/space_14" >

    <TextView
        android:id="@+id/info_item_time_tv"
        style="@style/ChattingUISplit"
        android:background="@drawable/common_transparent_bg"
        android:text="2013,1,2" />

    <LinearLayout
        android:id="@+id/info_item_cotent"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/common_form_bg"
        android:orientation="vertical"
        android:padding="0dp" >

        <LinearLayout
            android:id="@+id/topSlot"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/common_list_item_default_selector"
            android:orientation="vertical"
            android:padding="0dp" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/space_5" >

                <LinearLayout
                    android:id="@+id/title_date_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/startdate_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="开始时间：2013-12-03"
                        android:textColor="@color/list_subTitle"
                        android:textSize="@dimen/text_size_10" />

                    <TextView
                        android:id="@+id/enddate_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="结束时间：2013-12-03"
                        android:textColor="@color/list_subTitle"
                        android:textSize="@dimen/text_size_10" />

                    <TextView
                        android:id="@+id/active_state_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="共有305人参加"
                        android:textColor="@color/list_subTitle"
                        android:textSize="@dimen/text_size_10"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/title_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@id/title_date_layout"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/maintitle_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="2dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="活动标题"
                        android:textColor="@color/list_title"
                        android:textSize="@dimen/text_size_20" />

                    <TextView
                        android:id="@+id/subtitle_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="活动标题"
                        android:textColor="@color/list_title"
                        android:textSize="@dimen/text_size_12"
                        android:visibility="gone" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="152.0dip"
                android:padding="0dp" >

                <LinearLayout
                    android:id="@+id/info_item_photo_iv_bg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:orientation="vertical"
                    android:padding="0.5dp" >

                    <include
                        android:id="@+id/adzone_item_line"
                        layout="@layout/common_form_line"
                        android:padding="0dp" />

                    <ImageView
                        android:id="@+id/info_item_photo_iv"
                        android:layout_width="match_parent"
                        android:layout_height="150.0dip"
                        android:background="@drawable/qianniu_bg_small"
                        android:padding="0dp"
                        android:scaleType="centerCrop" />

                    <include
                        android:id="@+id/adzone_item_line"
                        layout="@layout/common_form_line"
                        android:padding="0dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/info_item_title_ll_in_image"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="@color/half_alpha_black"
                    android:gravity="center_vertical"
                    android:visibility="gone" >

                    <TextView
                        android:id="@+id/info_item_title_in_image"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="32.0dip"
                        android:padding="2.0dip"
                        android:text="@string/app_name"
                        android:textColor="@color/white"
                        android:textSize="19sp" />
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/info_item_content_tv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10.0dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:includeFontPadding="false"
                android:maxLines="4"
                android:text="@string/app_name"
                android:textColor="@color/list_subTitle"
                android:textSize="14sp" />

            <include layout="@layout/common_form_line" />

            <LinearLayout
                android:id="@+id/info_item_detail"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp" >

                <TextView
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:text="@string/read_all"
                    android:textColor="@color/list_title" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/common_small_next" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>