<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/resume_home_bg"
    android:orientation="vertical" >

    <RelativeLayout style="@style/common_top_layout_style" >

        <ImageButton
            android:id="@+id/resume_personal_goback"
            style="@style/common_top_left_title_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/common_button_back" />

        <ImageButton
            android:id="@+id/resume_edit_save"
            style="@style/common_top_right_title_style"
            android:src="@drawable/common_button_save"
            android:visibility="visible" />

        <TextView
            android:id="@+id/resume_personal_title"
            style="@style/common_top_center_bigtitle_style"
            android:text="@string/resume_personalinfo" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="20dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="20dp" >

                <LinearLayout
                    android:layout_width="0px"
                    android:layout_height="0px"
                    android:focusable="true"
                    android:focusableInTouchMode="true" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <LinearLayout style="@style/LineStyle_Layout" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/publish_reward_must"
                            android:textColor="@color/red" />

                        <TextView
                            style="@style/LineStyle_Text"
                            android:text="姓名" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/name"
                        style="@style/LineStyle_Edit"
                        android:hint="请输入姓名" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-2dp"
                    android:orientation="horizontal" >

                    <LinearLayout style="@style/LineStyle_Layout" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/publish_reward_must"
                            android:textColor="@color/red" />

                        <TextView
                            style="@style/LineStyle_Text"
                            android:text="性别" />
                    </LinearLayout>

                    <RadioGroup
                        android:id="@+id/gender"
                        style="@style/LineStyle_Edit"
                        android:checkedButton="@+id/gender_boy"
                        android:orientation="horizontal" >

                        <RadioButton
                            android:id="@id/gender_boy"
                            android:layout_gravity="center_vertical"
                            android:button="@drawable/common_radiobutton"
                            android:checked="true"
                            android:paddingLeft="20dp"
                            android:text="男"
                            android:textColor="@color/list_subTitle"
                            android:textSize="14sp" />

                        <RadioButton
                            android:id="@+id/gender_girl"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="30dp"
                            android:button="@drawable/common_radiobutton"
                            android:paddingLeft="15dp"
                            android:text="女"
                            android:textColor="@color/list_subTitle"
                            android:textSize="14sp" />
                    </RadioGroup>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-2dp"
                    android:orientation="horizontal" >

                    <LinearLayout style="@style/LineStyle_Layout" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/publish_reward_must"
                            android:textColor="@color/red" />

                        <TextView
                            style="@style/LineStyle_Text"
                            android:text="出生日期" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/birth"
                        style="@style/LineStyle_Button"
                        android:hint="请选择出生日期" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="-2dp"
                    android:orientation="horizontal" >

                    <LinearLayout style="@style/LineStyle_Layout" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/publish_reward_must"
                            android:textColor="@color/red" />

                        <TextView
                            style="@style/LineStyle_Text"
                            android:text="工作年份" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/workyear"
                        style="@style/LineStyle_Button"
                        android:hint="请选择开始工作年份" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-2dp"
                    android:orientation="horizontal" >

                    <LinearLayout style="@style/LineStyle_Layout" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/publish_reward_must"
                            android:textColor="@color/red" />

                        <TextView
                            style="@style/LineStyle_Text"
                            android:text="所在地区" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/city"
                        style="@style/LineStyle_Button"
                        android:hint="请选择所在地区" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-2dp"
                    android:orientation="horizontal" >

                    <LinearLayout style="@style/LineStyle_Layout" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/publish_reward_must"
                            android:textColor="@color/red" />

                        <TextView
                            style="@style/LineStyle_Text"
                            android:text="手机号码" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/mobile"
                        style="@style/LineStyle_Edit"
                        android:hint="请输入手机号码"
                        android:inputType="phone" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-2dp"
                    android:orientation="horizontal" >

                    <LinearLayout style="@style/LineStyle_Layout" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/publish_reward_must"
                            android:textColor="@color/red" />

                        <TextView
                            style="@style/LineStyle_Text"
                            android:text="电子邮箱" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/email"
                        style="@style/LineStyle_Edit"
                        android:hint="请输入电子邮箱" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-2dp"
                    android:orientation="horizontal" >

                    <LinearLayout style="@style/LineStyle_Layout" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/publish_reward_must"
                            android:textColor="@color/red" />

                        <TextView
                            style="@style/LineStyle_Text"
                            android:text="最高学历" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/edulevel"
                        style="@style/LineStyle_Button"
                        android:hint="请选择最高学历" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-2dp"
                    android:minHeight="@dimen/default_input_height"
                    android:orientation="horizontal" >

                    <LinearLayout style="@style/LineStyle_Layout"
                         android:layout_height="80dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/publish_reward_must"
                            android:textColor="@color/red"
                            android:visibility="invisible" />

                        <TextView
                            style="@style/LineStyle_Text"
                            android:text="关键字" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/labels"
                        style="@style/LineStyle_Edit"
                        android:layout_height="80dp"
                        android:hint="如：产品经理，java工程师，\n让企业HR，更容易找到你的简历"
                        android:maxLines="3"
                        android:singleLine="false" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/selfinfo_save"
                        style="@style/LineStyle_center"
                        android:background="@drawable/common_button_green"
                        android:minHeight="@dimen/default_input_height"
                        android:text="@string/frame_title_save" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>