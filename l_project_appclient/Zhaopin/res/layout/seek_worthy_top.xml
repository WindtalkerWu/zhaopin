<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/seekworthy_top_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:background="@drawable/common_form_bg" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp" >
            <RelativeLayout android:id="@+id/seekworthy_top_image_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
            <ImageView
                android:id="@+id/seekworthy_top_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0.5dp"
                android:scaleType="fitXY"
                android:background="@drawable/qianniu_logobg1" />
            </RelativeLayout>

            <LinearLayout android:id="@+id/seekworthy_top_image_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/seekworthy_top_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/list_title"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/seekworthy_top_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/list_subTitle"
                    android:textSize="14sp"
                    android:visibility="gone" />
                <TextView
                    android:id="@+id/seekworthy_top_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/list_subTitle"
                    android:textSize="14sp" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical" >

                    <TextView
                        android:id="@+id/seekworthy_top_attention"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/list_subTitle"
                        android:layout_toRightOf="@+id/seekworthy_top_attention_count_img"
                        android:text="dd"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@id/seekworthy_top_attention_count_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginRight="3dp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="5.5dp"
                        android:background="@drawable/common_bg_attention" />
                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>
