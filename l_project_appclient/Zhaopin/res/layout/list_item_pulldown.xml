<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
	<ImageView
		android:id="@+id/list_item_pulldown_line"
		android:layout_width="108.0dip"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		android:background="@drawable/common_bg_pulldown_line" />
    <TextView 
        android:id="@+id/list_item_pulldown_text"
        android:layout_width="108.0dip"
        android:layout_height="48.0dip"
        android:layout_below="@id/list_item_pulldown_line"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/white"
        android:background="@drawable/common_button_pulldown_nochoose"
        />
</RelativeLayout>