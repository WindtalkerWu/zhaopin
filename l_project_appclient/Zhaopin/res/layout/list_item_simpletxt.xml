<?xml version="1.0" encoding="utf-8"?>
<com.qianniu.zhaopin.app.ui.InfoListTxtItem xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/info_listitem_txtcontainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/info_listitem_time_tv"
        style="@style/ChattingUISplit"
        android:background="@drawable/common_transparent_bg"
        android:text="2013.1.2"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="14dp"
        android:paddingRight="15dp" >

        <ImageView
            android:id="@+id/info_listitem_userface"
            style="@style/user_face_image"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/qianniu_logobg" />

        <TextView
            android:id="@+id/info_listitem_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@id/info_listitem_userface"
            android:includeFontPadding="false"
            android:text=""
            android:layout_alignParentTop="true"
            android:textColor="@color/list_subTitle"
            android:textSize="14sp" 
        	android:background="@drawable/image_chat_bg"/>
    </RelativeLayout>

</com.qianniu.zhaopin.app.ui.InfoListTxtItem>